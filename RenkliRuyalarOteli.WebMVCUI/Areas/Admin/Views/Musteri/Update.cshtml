@using RenkliRuyalarOteli.WebMVCUI.Areas.Admin.Models.Musteri;
@model MusteriUpdateDTO
<div class="card">
    <div class="card-header">
        <h3>@Model.Ad @Model.Soyad</h3>
        <div class="card-header">
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        </div>
    </div>
    <div class="card-body">
        <form asp-action="Update" asp-controller="Musteri" method="post" enctype="multipart/form-data">
            <input type="hidden" >
            <div class="input-group mb-3">
                <input type="email" asp-for="Email" class="form-control" placeholder="Email">
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-envelope text-danger" asp-validation-for="Email"></span>
                    </div>
                </div>
            </div>
            <div class="input-group mb-3">
                <input type="text" asp-for="Ad" class="form-control" placeholder="Adiniz">
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-envelope text-danger" asp-validation-for="Ad"></span>
                    </div>
                </div>
            </div>
            <div class="input-group mb-3">
                <input type="text" asp-for="Soyad" class="form-control" placeholder="Soyadi">
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-envelope text-danger" asp-validation-for="Soyad"></span>
                    </div>
                </div>
            </div>
            <div class="input-group mb-3">
                <input type="text" asp-for="CepNo" class="form-control" placeholder="Telefon No">
                <div class="input-group-append">
                    <div class="input-group-text">

                        <span class="fa-sharp fa-solid fa-user text-danger" asp-validation-for="CepNo"></span>
                    </div>
                </div>
            </div>
            <div class="input-group mb-3">
                <input type="password" asp-for="MusteriTcNo" class="form-control" placeholder="Tc No">

                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-envelope text-danger" asp-validation-for="MusteriTcNo"></span>
                    </div>
                </div>
            </div>

            <div class="input-group mb-3">
                @* <input type="radio" asp-for="Cinsiyet"  class="form-control" placeholder="Bayan"> *@
                @* <input type="radio" asp-for="Cinsiyet"  class="form-control" placeholder="Erkek"> *@
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-envelope text-danger" asp-validation-for="Cinsiyet"></span>
                    </div>
                </div>
            </div>
            
            <button type="submit" class="btn btn-primary" value="Kaydet">Kaydet</button>
        </form>
    </div>
</div>
